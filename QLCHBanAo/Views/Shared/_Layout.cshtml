<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLCHBanAo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLCHBanAo.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="layout">
        <nav class="sidebar">
            <h2>QUẢN LÝ</h2>

            <a class="menu-item active" data-target="home" asp-controller="DashBoard" asp-action="Index">🏠 Trang chủ</a>
            <a class="menu-item" data-target="store" asp-controller="CuaHang" asp-action="Index">🏪 Quản lý cửa hàng</a>
            <a class="menu-item" data-target="product" asp-controller="SanPham" asp-action="Index">📦 Quản lý sản phẩm</a>
            <div class="menu-item" data-target="customer">🧍‍♂️ Quản lý khách hàng</div>
            <div class="menu-item" data-target="invoice">🧾 Hóa đơn bán hàng</div>
            <div class="menu-item" data-target="warehouse">📥 Xuất - nhập - tồn kho</div>
            <a class="menu-item" data-target="user" asp-controller="NguoiDung" asp-action="Index">👤 Quản lý người dùng</a>
            <div class="menu-item" data-target="report">📊 Thống kê - Báo cáo</div>
        </nav>

        <main class="content">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
