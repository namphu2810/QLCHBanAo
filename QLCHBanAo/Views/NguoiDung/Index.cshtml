@model IEnumerable<QLCHBanAo.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý người dùng";
}


<section id="user" class="card"">
    <div class="title">@ViewData["Title"]</div>
    <button class="btn btn-primary">Thêm người dùng</button>

    <table class="mt-3 table table-striped table-hover">
        <thead class="table-danger"">
            <tr>
                <th>ID</th>
                <th>Họ Tên</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>SDT</th>
                <th>Ngày tạo</th>
                <th>Tài khoản</th>
                <th>Mật khẩu</th>
                <th>Vai trò</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TenNguoiDung</td>
                        <td>@item.Email</td>
                        <td>@item.DiaChi</td>
                        <td>@item.SoDienThoai</td>
                        <td>@item.NgayTao</td>
                        <td>@item.TaiKhoan</td>
                        <td>@item.MatKhau</td>
                        <td>
                            @{
                                if (item.QuyenHan == 0)
                                {
                                    @:Quản trị viên
                                }
                                else if (item.QuyenHan == 1)
                                {
                                    @:Quản lý
                                }
                                else
                                {
                                    @:Nhân viên
                                }
                            }
                        </td>
                        <td>
                            <button class="btn btn-primary">Xem</button>
                            <button class="btn btn-warning">Sửa</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</section>